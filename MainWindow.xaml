<Window x:Class="LiftTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiftTracker" xmlns:view="clr-namespace:LiftTracker.View"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" Background="#4d6160">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="LiftsCBox" Height="30" VerticalAlignment="Top" Width="100" Background="#a3c68c">
            </ComboBox>
            <Button x:Name="AddLiftBtn" Grid.Column="0" Background="#a3c68c" Width="80" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="AddLiftBtn_Click">Add Lift</Button>
        </StackPanel>
        <Label x:Name="CurrentDateLbl" HorizontalAlignment="Center" Grid.Column="1" FontSize="20" ></Label>
        <ScrollViewer Width="530" HorizontalAlignment="Right" Grid.Column="1" Margin="0,30,0,0">
            <WrapPanel x:Name="ucPanel" Width="500" HorizontalAlignment="Right" Margin="0,5,5,0" Grid.Column="1"/>
        </ScrollViewer>
    </Grid>
</Window>
